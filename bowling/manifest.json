{
    "manifest_version": 3,
    "name": "Bowling",
    "version": "1.0",
    "description": "Automated bowling bot for Lumitel",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://bowling.lumitel.bi/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://bowling.lumitel.bi/*",
                "*://www.bowling.lumitel.bi/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": true
        }
    ]
}